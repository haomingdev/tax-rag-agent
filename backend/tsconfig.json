{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true, // Part of strict mode
    "noImplicitAny": true,    // Part of strict mode
    "strictBindCallApply": true, // Part of strict mode
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true // Enable all strict type-checking options
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
